@using Microsoft.AspNetCore.Identity
@using RazorEF

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<span class="badge badge-danger">Đây là Login Partial</span>

<ul class="navbar-nav">

@if (SignInManager.IsSignedIn(User) == true) {
     <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="Account/Manage/Index">
            Xin chào @UserManager.GetUserName(User)
        </a>
    </li>
    <li class="nav-item">
        @* <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">
            Đăng xuất
        </a> *@
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-link nav-link text-dark">Đăng xuất</button>
            </form>
        
    </li>
} else {
<li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
    </li>
}
    
</ul>