@page "/admin/members/"
@model RazorEF.User.IndexModel
@{
    ViewData["Title"] = "Danh sách thành viên";

    var pagingModel = new myWeb.Helpers.PagingModel()
            {
                currentPage = Model.currentPage,
                countPages = Model.countPages,
                generateUrl = (int? p) => Url.Page("./Index", new { p = p }),
            };
}

<h1>@ViewData["Title"]</h1>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<p>Tổng số thành viên : @Model.totalUser</p>


<table class="table">
    <tr>
        <th>
            Tên người dùng
        </th>
        <th>
            Vai trò
        </th>
        <th>
            Tác vụ
        </th>
    </tr>
    @foreach (var user in Model.users)
    {
        <tr>
            <td>
                @user.UserName
            </td>
            <td>
                @if (string.IsNullOrEmpty(user.roleNames))
                {
                    <a class="text-dark" asp-page="./AddRole" asp-route-id="@user.Id">Thêm vai trò</a>
                }
                else
                {
                    <a asp-page="./AddRole" asp-route-id="@user.Id">@user.roleNames</a>
                }

            </td>
            <td>
                <a class="btn btn-success btn-sm" asp-page="./SetPassword" asp-route-id="@user.Id">Đặt mật khẩu</a>

            </td>
        </tr>
    }
</table>

<partial name="_Paging" model="@pagingModel"></partial>