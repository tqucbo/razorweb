@page "/admin/editrole/{roleid}"
@model RazorEF.Role.EditModel
@{
    ViewData["Title"] = "Cập nhật vai trò";
}

<h1>@ViewData["Title"]</h1>

<partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

<hr>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="inputModel.nameOfRole" class="control-label"></label>
                <input asp-for="inputModel.nameOfRole" class="form-control" />
                <span asp-validation-for="inputModel.nameOfRole" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                <a class="btn btn-primary" asp-page="./Index">Danh sách các Vai trò</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
